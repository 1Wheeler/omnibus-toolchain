#!/bin/sh
# WARNING: REQUIRES /bin/sh
#
# - must run on /bin/sh on solaris 9
# - must run on /bin/sh on AIX 6.x
# - if you think you are a bash wizard, you probably do not understand
#   this programming language.  do not touch.
# - if you are under 40, get peer review from your elders.
#

if [ ! -f /etc/redhat-release -a ! -f /etc/fedora-release -a ! -f /etc/system-release -a ! -f /etc/SuSE-release -a ! -f /etc/debian_version ]; then
  if [ -d /opt/angry-omnibus-toolchain ]; then
    rm -rf /opt/angry-omnibus-toolchain
  fi
fi

echo "The Angry Omnibus Toolchain has been removed"

exit 0
